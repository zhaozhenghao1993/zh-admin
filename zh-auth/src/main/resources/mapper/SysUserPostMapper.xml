<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.zhenghao.zh.auth.dao.SysUserPostMapper">

	<insert id="save">
		INSERT INTO sys_user_post (`user_id`, `post_id`)
		VALUES
		<foreach collection="postIdList" item="item" index="index" separator="," >
			(
			#{userId},
			#{item}
			)
		</foreach>
	</insert>

	<delete id="removeByUserId">
		DELETE
		FROM
			sys_user_post
		WHERE
			user_id = #{value}
	</delete>

	<delete id="removeByPostId">
		DELETE
		FROM
			sys_user_post
		WHERE
			post_id = #{value}
	</delete>

	<delete id="batchRemoveByUserId">
		DELETE
		FROM
		sys_user_post
		WHERE
		user_id IN
		<foreach item="userId" collection="array" open="(" separator="," close=")">
			#{userId}
		</foreach>
	</delete>

	<delete id="batchRemoveByPostId">
		DELETE
		FROM
		sys_user_post
		WHERE
		post_id IN
		<foreach item="postId" collection="array" open="(" separator="," close=")">
			#{postId}
		</foreach>
	</delete>

	<select id="listUserPostId" resultType="long">
		SELECT
			post_id
		FROM
			sys_user_post
		WHERE
			user_id = #{value}
	</select>

	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>
	
</mapper>